<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="true">
  <class name="de.htwk.autolat.LivingTaskInstance.LivingTaskInstanceImpl" table="ao_living_task_instance">  
  
    <id name="key" column="id" type="long" unsaved-value="null">
        <generator class="enhanced-sequence">
            <param name="sequence_name">hibernate_unique_key</param>
            <param name="force_table_use">true</param>
            <param name="optimizer">legacy-hilo</param>
            <param name="value_column">next_hi</param>
            <param name="increment_size">32767</param>
            <param name="initial_value">32767</param>
        </generator>
    </id>

	<property name="signature" column="signature" type="string" />
	<property name="taskText" column="tasktext" type="text" />
	<property name="internalTaskText" column="internaltasktext" type="text" />
	<property name="sampleSolution" column="samplesolution" type="text" />
	<property name="sampleDocumentation" column="sampledocumentation" type="text" />
	<property name="creationDate" column="creationdate" type="timestamp" />
    
  </class>
</hibernate-mapping>

<?xml version="1.0"?>
<!--
/**
 * 
 * Mapping of CommentEntry class to database tables
 */
-->
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
  <class name="de.unileipzig.xman.comment.CommentEntry" table="o_xman_commentEntry">  

    <id name="key" column="commentEntry_id" type="long" unsaved-value="null">
        <generator class="enhanced-sequence">
            <param name="sequence_name">hibernate_unique_key</param>
            <param name="force_table_use">true</param>
            <param name="optimizer">legacy-hilo</param>
            <param name="value_column">next_hi</param>
            <param name="increment_size">32767</param>
            <param name="initial_value">32767</param>
        </generator>
    </id>
    
    <timestamp name="lastModified" column="lastmodified" />   
  	<property  name="creationDate" column="creationdate" type="timestamp" />   
    
    <property name="comment" column="comment" unique="false" type="string" not-null="true" length="16777210"/>

    <many-to-one name="author" class="org.olat.basesecurity.IdentityImpl" 
		column="author_id" outer-join="true" cascade="none" not-null="false"/> 
    
  </class>  
</hibernate-mapping>
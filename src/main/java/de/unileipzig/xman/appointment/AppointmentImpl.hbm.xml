<?xml version="1.0"?>
<!--
/**
 * 
 * Mapping of AppointmentImpl class to database tables
 */
-->
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
  <class name="de.unileipzig.xman.appointment.AppointmentImpl" table="o_xman_appointment">  

    <id name="key" column="appointment_id" type="long" unsaved-value="null">
        <generator class="enhanced-sequence">
            <param name="sequence_name">hibernate_unique_key</param>
            <param name="force_table_use">true</param>
            <param name="optimizer">legacy-hilo</param>
            <param name="value_column">next_hi</param>
            <param name="increment_size">32767</param>
            <param name="initial_value">32767</param>
        </generator>
    </id>
    
    <timestamp name="lastModified" column="lastmodified" />   
  	<property  name="creationDate" column="creationdate" type="timestamp" />   
  	
    <many-to-one name="exam" class="de.unileipzig.xman.exam.ExamImpl" outer-join="auto" cascade="none">  
		<column name="exam_id" not-null="false"/>    	
	</many-to-one>
    
	<property name="date" column="date" unique="false" type="timestamp" not-null="false"/>
	<property name="duration" column="duration" unique="false" type="integer" not-null="false"/>
	<property name="place" column="place" unique="false" type="string" not-null="false"/>
	<property name="occupied" column="occupied" unique="false" type="boolean" not-null="false"/>

  </class>  
</hibernate-mapping>